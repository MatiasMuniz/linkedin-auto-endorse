{
  "manifest_version": 3,
  "name": "LinkedIn Endorse Clicker",
  "version": "1.0",
  "description": "Clicks all 'Endorse' buttons on the LinkedIn skills pages.",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Click to Endorse",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
